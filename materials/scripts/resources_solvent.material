import * from "materials/scripts/pbr.material"
import * from "materials/scripts/resources.material"


material resources/resource_solvent_storage : resources/resource_liquid
{
	set_texture_alias albedo_1			materials/textures/resources/resource_magma_02_albedo.dds
	set_texture_alias normal_1			materials/textures/resources/resource_magma_02_normal.dds
	set_texture_alias packed_1			materials/textures/resources/resource_magma_02_packed.dds
	set_texture_alias emissive_1		materials/textures/resources/resource_morphium_01_albedo.dds
	set_texture_alias albedo_2			materials/textures/resources/resource_magma_01_albedo.dds
	set_texture_alias normal_2			materials/textures/resources/resource_magma_01_normal.dds
	set_texture_alias packed_2			materials/textures/resources/resource_magma_01_packed.dds
	set_texture_alias emissive_2		materials/textures/resources/resource_morphium_01_albedo.dds
	set_texture_alias gradient			materials/textures/gradient/cloudy_gradient.dds 174 1

	glow 3

	technique
	{
		pass
		{
			vertex_program_ref deferred_gbuffer_vp
			{
			}
		}
	}
}

material resources/resource_solvent_pipe : resources/resource_liquid
{
	set_texture_alias albedo_1			materials/textures/resources/resource_magma_02_albedo.dds
	set_texture_alias normal_1			materials/textures/resources/resource_magma_02_normal.dds
	set_texture_alias packed_1			materials/textures/resources/resource_magma_02_packed.dds
	set_texture_alias emissive_1		materials/textures/resources/resource_morphium_01_albedo.dds
	set_texture_alias albedo_2			materials/textures/resources/resource_magma_01_albedo.dds
	set_texture_alias normal_2			materials/textures/resources/resource_magma_01_normal.dds
	set_texture_alias packed_2			materials/textures/resources/resource_magma_01_packed.dds
	set_texture_alias emissive_2		materials/textures/resources/resource_morphium_01_albedo.dds
	set_texture_alias gradient			materials/textures/gradient/cloudy_gradient.dds 150 1

	glow 3

	technique
	{
		pass
		{
			vertex_program_ref deferred_gbuffer_tiled_vp
			{
        		param_named      cTilingFactor  float 0.5
			}
		}
	}
}

material resources/resource_solvent_fresnel
{
	render_group 109

	fresnel 1 0.5 0 0
	fresnel_color 10 10 10 0.1

	technique
	{
		pass
		{
			check       on
            comp_func   always_pass
            ref_value   1
            pass_op     replace
            two_sided   on

            scene_blend alpha_blend
            depth_bias -4 -1

            vertex_program_ref forward_object_fresnel_fog_vp
			{
			}

			fragment_program_ref forward_object_fresnel_fog_fp
			{
			}
		}
	}
}

